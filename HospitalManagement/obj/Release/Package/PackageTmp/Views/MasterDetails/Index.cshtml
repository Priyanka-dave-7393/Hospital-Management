@using HospitalManagement.Models

@model dynamic
@{
    ViewBag.Title = "Index";
}

<h2 class="text-center">My Account</h2>
<br />


<style>
    tr{
        margin:20px;
        padding:20px;
    }
    td{
        margin:50px;
    }
</style>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <h4>Details</h4>
    <hr />
   
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    

        <br />
        <table class="table">
           
            @foreach (var patient in Model.Patient)
            {


                <tr>
                    <td>@Html.Label("FirstName:   ")</td>

                    <td> <p>@patient.Firstname</p></td>

                </tr>
                <tr>
                    <td> @Html.Label("Lastname:   ")</td>
                    <td>
                        <p>@patient.Lastname</p>
                    </td>
                </tr>
                <tr>
                    <td>@Html.Label("Date Of Admit:   ")</td>
                    <td>
                        <p>@patient.DateOfAdmit</p>
                    </td>
                </tr>
            }

            @foreach (var doctors in Model.Doctor)
            {
        <tr>
            <td>@Html.Label("DoctorName:   ")</td>
            <td>
                <p>@doctors.Firstname &nbsp;&nbsp; @doctors.Lastname</p>
            </td>
        </tr>

        <tr>

            <td>@Html.Label("Doctor Mobile Number:   ")</td>
            <td>
                <p>@doctors.MobileNo</p>
            </td>
        </tr>   
    }
            @foreach (var bills in Model.Bill)
            {
       
        <tr>
            <td>
                @Html.Label("Total Charge:   ")
            </td>
            <td>
                <p>@(bills.RoomCharge + bills.DoctorCharge)</p>
            </td>
            
            
        </tr>

            }
            </table>
        
    
</div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
