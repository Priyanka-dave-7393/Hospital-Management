@model IEnumerable<HospitalManagement.Models.Bill>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>
<br />
<div class="btn btn-warning" style="height='50px';width='100px'">
    @Html.ActionLink("Print", "PrintPDF")
</div>
<br/>
<p>
    
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Doctor.Firstname)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Patient.Firstname)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Room.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DoctorCharge)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.RoomCharge)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Dischargedate)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Doctor.Firstname)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Patient.Firstname)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Room.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DoctorCharge)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RoomCharge)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Dischargedate)
            </td>
            <td>
                
                @Html.ActionLink("Edit", "Edit", new { id = item.BillId }) |
                @Html.ActionLink("Details", "Details", new { id = item.BillId }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.BillId })
            </td>
        </tr>
    }

</table>
